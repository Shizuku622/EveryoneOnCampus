<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/eoc_user_pic"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:theme="@style/Theme.MaterialComponents.Light"
            android:layout_height="220dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:src="@drawable/eoc_school"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="天津职业技术师范大学"
                        android:textSize="18dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayout1">

                    <ImageView
                        android:src="@drawable/eoc_user"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <EditText
                        android:text="1813"
                        android:id="@+id/et_user"
                        android:hint="请输入学号"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:layout_height="70dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayout2">

                    <ImageView
                        android:src="@drawable/eoc_passwd"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <EditText
                        android:text="123"
                        android:id="@+id/et_passwd"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:hint="请输入密码"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:layout_height="70dp" />

                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/probar_login"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_eoc_shape"
            android:textSize="17dp"
            android:text="登录"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@drawable/txt_press_color_selector"
                android:clickable="true"
                android:id="@+id/txt_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="注册"/>

            <TextView
                android:id="@+id/txt_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="忘记密码？"/>

        </RelativeLayout>


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="登录即表示同意"/>
            <TextView
                android:id="@+id/txt_userxieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/txt_blue_color"
                android:text="用户协议"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="和"/>
            <TextView
                android:id="@+id/txt_yinsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/txt_blue_color"
                android:text="隐私条款"/>


        </LinearLayout>
    </RelativeLayout>




</LinearLayout>