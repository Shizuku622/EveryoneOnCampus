<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/eoc_user_pic">
        <ImageView
            android:id="@+id/imgbtn_leftexit"
            android:layout_width="25dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:src="@drawable/eoc_leftexit"/>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:theme="@style/Theme.MaterialComponents.Light"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:src="@drawable/eoc_school"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="天津职业技术师范大学"
                        android:textSize="18dp"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearlayout2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayout1">

                    <ImageView
                        android:src="@drawable/eoc_user"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <EditText
                        android:id="@+id/et_user"
                        android:hint="请输入学号"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:layout_height="70dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearlayout3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayout2">

                    <ImageView
                        android:src="@drawable/eoc_passwd"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <EditText
                        android:id="@+id/et_passwd"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:hint="请输入密码"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:layout_height="70dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearlayout3">

                    <ImageView
                        android:src="@drawable/eoc_passwd"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"/>

                    <EditText
                        android:id="@+id/et_confirmpasswd"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:hint="请输入确认密码"
                        android:layout_width="match_parent"
                        android:inputType="text"
                        android:layout_height="70dp" />
                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_shape"
            android:textSize="17dp"
            android:text="注册"/>


    </LinearLayout>


</LinearLayout>