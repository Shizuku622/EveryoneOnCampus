<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.android.everyoneoncampus.custom.CustomTitle
        android:id="@+id/ctt_modi_user_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/flayout_modi_headpic"
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="80dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_modif_headpic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/eoc_pic"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/eoc_modi_headpic_white"/>

                </RelativeLayout>

            </FrameLayout>

            <TextView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击更换头像"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:gravity="center"
                android:text="昵称:"/>

            <EditText
                android:id="@+id/edit_modi_nicheng"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@null"/>

            <ImageView
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/eoc_rightexit"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:gravity="center"
                android:text="性别:"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spn_modif_sex"
                    android:spinnerMode="dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/modif_sex"/>


            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/eoc_rightexit"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:gravity="center"
                android:text="简介:"/>

            <EditText
                android:id="@+id/edit_modi_jianjie"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@null"/>

            <ImageView
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/eoc_rightexit"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:gravity="center"
                android:text="学校:"/>

            <EditText
                android:enabled="false"
                android:id="@+id/edit_modi_school"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@null"/>

            <ImageView
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/eoc_rightexit"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:gravity="center"
                android:text="手机号:"/>

            <EditText
                android:id="@+id/edit_modif_phone"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@null"/>

            <ImageView
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/eoc_rightexit"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:gravity="center"
                android:text="地区:"/>

            <EditText
                android:id="@+id/edit_modif_place"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:background="@null"/>

            <ImageView
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/eoc_rightexit"/>

        </LinearLayout>

