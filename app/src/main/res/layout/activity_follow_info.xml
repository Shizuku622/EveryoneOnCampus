<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgbtn_leftexit"
            android:src="@drawable/eoc_leftexit"
            style="@style/img_left_exit" />

        <TextView
            android:id="@+id/txt_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/eoc_text_color_drak"
            android:layout_centerInParent="true"
            android:text="信息"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_follow_headpic"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/eoc_pic"
            android:layout_width="@dimen/headpid_size_big"
            android:layout_height="@dimen/headpid_size_big"/>

        <TextView
            android:id="@+id/txt_follow_nicheng"
            android:layout_toRightOf="@id/img_follow_headpic"
            android:layout_alignTop="@id/img_follow_headpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/eoc_text_color_drak"
            android:text="昵称"
            android:textSize="16sp"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/txt__follow_qianming"
            android:layout_below="@id/txt_follow_nicheng"
            android:layout_alignLeft="@+id/txt_follow_nicheng"
            android:textColor="@color/eoc_text_color_drak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="签名"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_follow_name"
                android:text="姓名："
                style="@style/follow_info" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_linear"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_follow_sex"

                style="@style/follow_info"
                android:text="性别："/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_linear"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_follow_school"

                style="@style/follow_info"
                android:text="学校："/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_linear"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_follow_sno"

                style="@style/follow_info"
                android:text="学号："/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_linear"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_follow_phone"

                style="@style/follow_info"
                android:text="手机号："/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_linear"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_follow_place"

                style="@style/follow_info"
                android:text="地方："/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_linear"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_follow_sp"

                style="@style/follow_info"
                android:text="专业："/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_linear"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_follow_iden"

                style="@style/follow_info"
                android:text="身份："/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_linear"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_follow_send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_eoc_shape"
        android:textColor="@color/white"
        android:text="发送消息"
        android:textSize="17sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        />




</LinearLayout>