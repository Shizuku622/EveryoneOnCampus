<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/imgbtn_custom_leftexit"
        android:padding="10dp"
        android:src="@drawable/eoc_leftexit"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/imgbtn_custom_menu"
        android:src="@drawable/eoc_menu"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_margin="15dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/txt_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/eoc_text_color_drak"
        android:layout_centerInParent="true"
        android:text=""/>

    <View
        android:id="@+id/view_custom_title"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_linear"/>


</RelativeLayout>