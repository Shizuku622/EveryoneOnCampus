<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView android:layout_margin="10dp"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    app:cardMaxElevation="15dp"
    app:cardCornerRadius="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_lt_pic"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/eoc_backgroundkaoshi" />

        <TextView
            android:id="@+id/txt_lt_content"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的饭卡丢了，哪位好心人看到了联系我一下！"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_lt_headpic"
                android:layout_centerVertical="true"
                android:src="@drawable/eoc_pic"
                android:layout_marginLeft="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/txt_lt_user_incheng"
                android:text="星辰大海"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_lt_headpic"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_lt_chat"
                android:src="@drawable/chat"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <View
            android:id="@+id/view_lt_color"
            android:background="@color/tran_red"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

