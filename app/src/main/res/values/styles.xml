<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="gongneng_pic">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="img_left_exit">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="follow_info">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/eoc_text_color_drak</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tab_style">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tab_txt_selected">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/eoc_text_color_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tab_txt_unselected">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/eoc_grey</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>